@model IEnumerable<HR_TrackingTool.Models.Job_Description>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Current Positions</h2>


<table class="table table-bordered">
    
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Job_Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles_Resposibilities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contact_number)
            </th>
            <th>
                @Html.Label("Actions:")
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Job_Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Skills)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles_Resposibilities)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contact_number)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Job_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Job_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Job_Id })
                </td>
            </tr>
        }

</table>
